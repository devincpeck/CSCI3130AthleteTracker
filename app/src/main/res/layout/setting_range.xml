<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/t_setRangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Range"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/t_heartRateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart Rate"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/t_heartRateMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum" />

    <EditText
        android:id="@+id/et_heartRateMinimum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/t_heartRateMaximum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximum" />

    <EditText
        android:id="@+id/et_heartRateMaximum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11" />

    <TextView
        android:id="@+id/t_stepsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/t_stepsMinimum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum" />

    <EditText
        android:id="@+id/et_stepsMinimum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/t_stepsMaximum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximum" />

    <EditText
        android:id="@+id/et_stepsMaximum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />
</LinearLayout>